<div>
  <div class="row">
    <h1 class="page-title text-center">Entrar</h1>
  </div>
  <div class="row vertical-center">
    <div class="col-md-4"></div>
    <div class="col-md-4 rounded-start square" id="pessoaFisicaLogin">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <div class="text-center"><h2>Area do administrador</h2></div>
      </div>

      <div class="form-group">
        <%= f.label :email, class: "form-label" %>
        <div class="input-group">
          <span class="material-icons input-group-text">account_circle</span>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= label :password, :title, 'Senha', class: "form-label"%>
        <div class="input-group">
          <span class="material-icons input-group-text">lock</span>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>
      </div>

      <div class="row" style="margin-top: 1rem;">
        <div class="col-md-2">
          <% if devise_mapping.rememberable? %>
          <div class="form-check">
            <%= f.check_box :remember_me, class: "form-check-input" %>
            <%= f.label :remember_me, class: "form-check-label" %>
          </div>
          <% end %>
        </div>
      </div>

      <div class="row" style="margin-top: 1rem;">
        <div class="col-md-2"></div>
        <div class="d-flex justify-content-center">
          <%= submit_tag "Entrar", class: "btn btn-submit" %>
        </div>
        <div class="col-md-2"></div>
      </div>
      <% end %>

    </div>
    <div class="col-md-4"></div>

  </div>

</div>

<%= render "admins/shared/links" %>