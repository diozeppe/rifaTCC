<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6">
  <h1 class="page-title text-center">Recuperar minha senha</h1>
</div>
</div>
<div class="row">
  <div class="col-md-4"></div>
  <div class="col-md-4">
    <div class="row">
    <%= form_for(resource, as: resource_name, url: user_password_path(resource), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="row">
      <div class="d-flex justify-content-center">
      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => 'form-control rounded-3' %>
      </div>
    </div>
    </div>
      <div class="row">
        <div class="d-flex justify-content-center">
          <%= f.submit "Solicitar nova senha", class: "btn btn-action mt-2" %>
        </div>
      </div>
    </div>
    <% end %>
    </div>
  </div>
</div>