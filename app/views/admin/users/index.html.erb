<div class="col-md-12">
	<div class="row">
		<h1 class="page-title text-center">Usuários</h1>
	</div>
	<div class="row" id="main_admin">
		<div class="col-md-1"></div>
		<div class="col-md-10">
			<%= link_to 'Novo', new_admin_user_path, :class => 'btn btn-action' %>
			<div class="input-group data-table-search">
				<input class="form-control" type="text" placeholder="Busca" aria-label="Search">
				<div class="input-group-btn">
					<button id="btnSearch" class="btn btn-action" type="button"><i class="material-icons">search</i></button>
				</div>
			</div>
			<table id="userDataTable" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
				<thead>
					<tr>
						<th class="th-sm">
							Nome
						</th>
						<th class="th-sm">
							CPF
						</th>
						<th class="th-sm">
							Telefone
						</th>
						<th class="th-sm">
							Endereço
						</th>
						<th class="th-sm">
							Email
						</th>
						<th class="th-sm">
						</th>
						<th class="th-sm">
						</th>
					</tr>
				</thead>
				<tbody>
					<% @users.each do |user| %>
					<tr>
						<td><%= user.name %></td>
						<td><%= CPF.new(user.cpf).formatted %></td>
						<td><%= number_to_phone(user.phone_number, pattern: /(\d{2})(\d{4})(\d{4})$/)  %></td>
						<td><%= user.address %></td>
						<td><%= user.email %></td>
						<td><%= link_to '<i class="material-icons">edit</i>'.html_safe, edit_admin_user_path(user), :class => 'btn' %></td>
						<td><%= link_to '<i class="material-icons">delete</i>'.html_safe, admin_user_path(user),  method: :delete, data: {confirm: "Tem certeza que deseja excluir o usuario?"}, :class => 'btn' %></td>
					</tr>
					<% end %> 	
				</tbody>
			</table>
			<div align="center">
				<%= paginate @users %>
			</div>
		</div>
		<div class="col-md-1"></div>
	</div>
</div>