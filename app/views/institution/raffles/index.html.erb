<div class="row">
   <div id="sidebar_wrap" class="col-md-3">
      <%= render 'layouts/navigation/sidebar_menu' %>
   </div>
   <div class="col-md-8">
      <h1 class="text-center">Minhas Rifas</h1>
      <div id="intitution-raffles-list" class="pt-3">
         <%= link_to 'Nova Rifa', new_institution_raffle_path, :class => 'btn btn-action' %>
         <div class="row">
         <div id="raffle_filters" class="my-2">
            <h5 class="text-center">Filtrar</h5>
            <br>
            <br>
            <br>
         </div>
         </div>
         <div class="row">
         <% @raffles.each do |raffle| %>
         <div class="card my-2">
            <div class="raffle-card">
               <div class="row g-0">
                  <div class="col-md-3">
                     <img src="https://img.r7.com/images/peugeot-308-14052020221514936" class="img-fluid rounded" alt="...">
                  </div>
                  <div class="col-md-5">
                     <div class="card-body">
                        <h5 class="card-title"><%= raffle.title %></h5>
                        <p class="card-text"><%= raffle.description %></p>
                        <p class="card-text"><small class="text-muted">Data do sorteio: <%= raffle.draw_date %></small></p>
                     </div>
                  </div>
                  <div class="col-md-4">
                     <div class="row">
                        <div class="col-md-12">
                           <h5 class="text-center">Progresso</h5>
                        </div>
                     </div>
                     <div class="row">
                        <div class="col-md-12">
                           <div class="d-flex justify-content-center">
                              <canvas class="raffleProgessChart" data-tickets-sold = "<%= raffle.tickets_sold.to_s %>" data-tickets-open = "<%= (raffle.tickets_number - raffle.tickets_sold).to_s %>" style="width: 500px;"></canvas>
                           </div>
                        </div>
                     </div>
                     <div class="row">
                        <div class="col-md-12">
                           <h5 class="text-center"><%= raffle.tickets_sold.to_s + '/' + raffle.tickets_number.to_s %></h5>
                        </div>
                        <div class="row">
                           <div class="col-md-12">
                              <div class="d-flex justify-content-center">
                                 <%= link_to 'Visualizar'.html_safe, institution_raffle_path(raffle), :class => 'btn btn-action mb-2 ms-4' %>
                              </div>
                           </div>
                        </div>
                     </div>
                  </div>
               </div>
            </div>
         </div>
         <% end %>
      </div>
      <div align="center">
         <%= will_paginate %>
      </div>
  </div>
   </div>
</div>
</div>